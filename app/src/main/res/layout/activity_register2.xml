<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="34dp"
    android:background="@color/black"
    tools:context=".RegisterActivity2">

    <ImageView
        android:id="@+id/iv_left2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_green_logo2"
        android:layout_width="134dp"
        android:layout_height="40dp"
        android:src="@drawable/spotify_logo_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_register2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintVertical_bias="0.045"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_green_logo2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If You Need Any Support"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/tv_click_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Click Here"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.76"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#42C83C" />


    <EditText
        android:id="@+id/et_fulName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.23"
        android:padding="27dp"
        android:hint="Full Name"
        android:textColorHint="#6F6D6D"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:imeOptions="actionNext"
        android:background="@drawable/bg_shadow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/et_email2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.35"
        android:padding="27dp"
        android:hint="Enter  Email"
        android:textColorHint="#6F6D6D"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:imeOptions="actionNext"
        android:background="@drawable/bg_shadow"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/et_fulName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Password"
        android:textSize="12sp"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textColorHint="#6F6D6D"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/white"
        android:background="@drawable/bg_shadow"
        android:drawableEnd="@drawable/hide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_email2"
        android:layout_marginTop="18dp"/>


    <EditText
        android:id="@+id/et_repeat_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Repeat Password"
        android:textSize="12sp"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textColorHint="#6F6D6D"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/white"
        android:background="@drawable/bg_shadow"
        android:drawableEnd="@drawable/hide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_password2"
        android:layout_marginTop="18dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:padding="18dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="24sp"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_repeat_password"/>

    <ImageView
        android:id="@+id/iv_vector2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/vector"
        app:layout_constraintTop_toBottomOf="@id/btn_register"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/iv_icon_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/apple"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/iv_vector2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_have_account2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have An Account?"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toBottomOf="@id/iv_icon_google"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textSize="12sp"
        android:textColor="#FFEB3B"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/tv_have_account2"
        app:layout_constraintStart_toEndOf="@id/tv_have_account2"/>





</androidx.constraintlayout.widget.ConstraintLayout>