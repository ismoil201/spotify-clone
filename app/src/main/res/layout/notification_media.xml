<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#eeeeee"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ðŸŽµ Albom rasmi -->
    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_1" />

    <!-- ðŸ”¤ Oâ€˜ng tomonda ma'lumot va tugmalar -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingStart="10dp">

        <!-- Qoâ€˜shiq nomi va artist -->
        <TextView
            android:id="@+id/tvSongTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Singer name"
            android:textSize="13sp"
            android:textColor="#333333"
            android:singleLine="true"
            android:ellipsize="end" />

        <!-- âœ… RemoteViews uchun ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@android:color/black"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <!-- Tugmalar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPrev"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_svg_for_notif"
                android:background="@android:color/transparent"
                />

            <ImageButton
                android:id="@+id/btnPlay"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_svg_for_notif"
                android:background="@android:color/transparent"

              />

            <ImageButton
                android:padding="10dp"
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_svg_for_notif"
                android:background="@android:color/transparent"

            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
